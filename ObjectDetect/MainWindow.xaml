<Window x:Name="keyboard" x:Class="ObjectDetect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="MenuItem_Click_Open"/>
                <MenuItem Header="_Save" Click="MenuItem_Click_Save"/>
                <Menu Height="100" Width="auto"/>
            </MenuItem>
        </Menu>
        
        <ScrollViewer Height="auto" Width="auto" Name="scroller" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Canvas Height="auto" Width="auto" Name="canvas" MouseWheel="canvas_MouseWheel" MouseDown="Canvas_MouseDown" KeyDown="Canvas_KeyDown" Focusable="True"/>
        </ScrollViewer>
    </DockPanel>
</Window>
